@model IEnumerable<ReadStudentDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a asp-action="Index" style="margin-left: -15px; margin-bottom:10px" class="btn btn-outline-primary">All</a>
        </div>
        <div class="col-md-6">
            <a asp-action="Create" style="float: right !important; margin-right: -15px; margin-bottom:10px" class="btn btn-outline-success">Add New</a>
        </div>


    </div>

</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Index)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" style="margin-left:15px" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>